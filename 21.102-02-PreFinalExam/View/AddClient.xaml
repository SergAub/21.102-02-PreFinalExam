<Window x:Class="_21._102_02_PreFinalExam.View.AddClient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_21._102_02_PreFinalExam.View"
        mc:Ignorable="d"
        Title="AddClient" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock>Фамилия</TextBlock>
            <TextBox x:Name="tbSurname" Width="Auto"/>
            <TextBlock>Имя</TextBlock>
            <TextBox x:Name="tbName" Width="Auto"/>
            <TextBlock>Отчество</TextBlock>
            <TextBox x:Name="tbPatronymic" Width="Auto"/>
            <TextBlock>Телефон</TextBlock>
            <TextBox x:Name="tbPhone" Width="Auto"/>
            <Button x:Name="btnChoosePhoto" Content="Выбрать фото" Width="Auto"/>
            <TextBlock x:Name="tblPhotoPath" Text="Путь к фото"/>
            <StackPanel Orientation="Horizontal">
                <Button x:Name="btnOK" Content="ОК" Margin="5"/>
                <Button x:Name="btnCancel" Content="Отмена" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
